<% @page_title = "Page Details" %>
<%= link_to("<< Back to list", pages_path, :class => 'back-link') %>
<div class = "sections show">
    <h2> Show Pages</h2>
    <table summary="Pages detail view">
        <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
        </tr>
        <tr>
            <th>Subject ID</th>
            <td><%= @page.subject_id %></td>
        </tr>
        <tr>
            <th>Permalink</th>
            <td><%= @page.permalink %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
        </tr>
        <tr>
            <th>Visible?</th>
            <td><%= @page.visible %></td>
        </tr>
        <tr>
            <th>Created</th>
            <td><%= @page.created_at %></td>
        </tr>
        <tr>
            <th>Updtaed</th>
            <td><%= @page.updated_at %></td>
        </tr>
    </table>
</div>
